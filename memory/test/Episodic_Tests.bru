  "user_id": "{{userId}}",
  "agent_id": "{{agentId}}",
  "conversation_id": "{{conversationId}}",
  "topic_hint": "travel_experience",
  "metadata": {
    "importance": "high",
    "category": "travel_memory",
    "location": "tokyo",
    "year": "2023"
  }
}

